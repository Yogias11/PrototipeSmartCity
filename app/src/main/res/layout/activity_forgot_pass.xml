<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="#20B2AA"
    tools:context=".ForgotPassActivity">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_action_mail"
        android:scaleType="fitXY"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilihan 1. Masukkan Email Anda"
        android:id="@+id/txt"
        android:layout_below="@id/gambar"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:id="@+id/txt_email_forgot">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_email"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coba pertanyaan lainnya."
        android:textSize="20sp"
        android:layout_below="@id/txt_email_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:clickable="true"
        android:id="@+id/txt_link_question_forgot"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_next"
        android:id="@+id/btn_forgot_sukses"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>