<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/relative_layout1"
    android:background="#6495ED"
    tools:context=".register">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_person_pin"
        android:scaleType="fitXY"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_below="@id/gambar1"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/gambar1"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_fullname1">

        <EditText
            android:id="@+id/fullname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="text"
            android:hint="Fullname"
            android:drawablePadding="15dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txt_fullname1"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email1">

        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Email"
            android:drawablePadding="15dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txt_email1"
        android:layout_height="wrap_content"
        android:id="@+id/txt_username1">

        <EditText
            android:id="@+id/username1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Username"
            android:drawablePadding="15dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:id="@+id/txt_password1"
        android:layout_below="@id/txt_username1"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/toggle_eye"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password1"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_button"
        android:fontFamily="monospace"
        android:layout_below="@id/txt_password1"
        android:text="Register"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold" />


</RelativeLayout>